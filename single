    <script>
        // Navigation functionality
        const navItems = document.querySelectorAll('.nav-item');
        const viewContents = document.querySelectorAll('.view-content');
        
        navItems.forEach(item => {
            item.addEventListener('click', () => {
                const view = item.getAttribute('data-view');
                
                // Update active state
                navItems.forEach(nav => nav.classList.remove('active'));
                item.classList.add('active');
                
                // Show correct view
                viewContents.forEach(view => view.classList.remove('active'));
                document.getElementById(`${view}-view`).classList.add('active');
            });
        });

        // Command palette functionality
        const commandBtn = document.querySelector('.command-btn');
        const commandPalette = document.getElementById('commandPalette');
        const overlay = document.getElementById('overlay');
        const commandInput = document.querySelector('.command-input');
        const commandItems = document.querySelectorAll('.command-item');
        
        function openCommandPalette() {
            commandPalette.style.display = 'block';
            overlay.style.display = 'block';
            setTimeout(() => {
                commandInput.focus();
            }, 100);
        }
        
        function closeCommandPalette() {
            commandPalette.style.display = 'none';
            overlay.style.display = 'none';
        }
        
        commandBtn.addEventListener('click', openCommandPalette);
        overlay.addEventListener('click', closeCommandPalette);
        
        document.addEventListener('keydown', (e) => {
            if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
                e.preventDefault();
                openCommandPalette();
            }
            
            if (e.key === 'Escape') {
                closeCommandPalette();
            }
            
            // Keyboard shortcuts for navigation
            if (e.metaKey || e.ctrlKey) {
                switch(e.key) {
                    case '1':
                        e.preventDefault();
                        setActiveView('issues');
                        break;
                    case '2':
                        e.preventDefault();
                        setActiveView('projects');
                        break;
                    case '3':
                        e.preventDefault();
                        setActiveView('roadmap');
                        break;
                    case '4':
                        e.preventDefault();
                        setActiveView('reports');
                        break;
                    case 'n':
                        e.preventDefault();
                        createNewIssue();
                        break;
                }
            }
        });
        
        commandItems.forEach(item => {
            item.addEventListener('click', () => {
                const command = item.getAttribute('data-command');
                executeCommand(command);
                closeCommandPalette();
            });
        });
        
        function setActiveView(view) {
            navItems.forEach(nav => nav.classList.remove('active'));
            viewContents.forEach(view => view.classList.remove('active'));
            
            document.querySelector(`.nav-item[data-view="${view}"]`).classList.add('active');
            document.getElementById(`${view}-view`).classList.add('active');
        }
        
        function executeCommand(command) {
            switch(command) {
                case 'issues':
                    setActiveView('issues');
                    break;
                case 'projects':
                    setActiveView('projects');
                    break;
                case 'roadmap':
                    setActiveView('roadmap');
                    break;
                case 'reports':
                    setActiveView('reports');
                    break;
                case 'create-issue':
                    createNewIssue();
                    break;
                case 'new-cycle':
                    startNewCycle();
                    break;
            }
        }
        
        function createNewIssue() {
            alert('Opening new issue form...');
            // In a real app, this would open a modal form
        }
        
        function startNewCycle() {
            alert('Starting new development cycle...');
            // In a real app, this would open a configuration modal
        }
        
        // Drag and drop for kanban board
        const issueCards = document.querySelectorAll('.issue-card');
        const columns = document.querySelectorAll('.kanban-column');
        
        let draggedItem = null;
        
        issueCards.forEach(card => {
            card.addEventListener('dragstart', () => {
                draggedItem = card;
                setTimeout(() => {
                    card.style.opacity = '0.4';
                }, 0);
            });
            
            card.addEventListener('dragend', () => {
                setTimeout(() => {
                    card.style.opacity = '1';
                    draggedItem = null;
                }, 0);
            });
        });
        
        columns.forEach(column => {
            column.addEventListener('dragover', e => {
                e.preventDefault();
            });
            
            column.addEventListener('dragenter', e => {
                e.preventDefault();
                column.style.backgroundColor = 'rgba(94, 106, 210, 0.05)';
            });
            
            column.addEventListener('dragleave', () => {
                column.style.backgroundColor = '';
            });
            
            column.addEventListener('drop', e => {
                e.preventDefault();
                column.style.backgroundColor = '';
                column.appendChild(draggedItem);
                
                // Update issue count
                const countElement = column.querySelector('.issue-count');
                countElement.textContent = parseInt(countElement.textContent) + 1;
                
                // Find the previous column and update its count
                const previousColumn = draggedItem.parentElement;
                const prevCountElement = previousColumn.querySelector('.issue-count');
                prevCountElement.textContent = parseInt(prevCountElement.textContent) - 1;
            });
        });
        
        // Sample issue interaction
        issueCards.forEach(card => {
            card.addEventListener('click', () => {
                alert(`Opening issue: ${card.querySelector('.issue-id').textContent}`);
            });
        });
        
        // Keyboard shortcuts hint
        document.addEventListener('keydown', (e) => {
            if (e.key === '?') {
                alert('Keyboard Shortcuts:\n\n' +
                      '⌘K - Open command palette\n' +
                      '⌘N - Create new issue\n' +
                      '⌘F - Search issues\n' +
                      '⌘1 - Go to My Issues\n' +
                      '⌘2 - Go to Projects\n' +
                      '⌘3 - Go to Roadmap\n' +
                      '⌘4 - Go to Reports\n' +
                      'Esc - Close modal/command palette');
            }
        });
    </script>
