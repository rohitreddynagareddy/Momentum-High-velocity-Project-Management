    <!-- Command Palette -->
    <div class="overlay" id="overlay"></div>
    <div class="command-palette" id="commandPalette">
        <div class="command-header">
            <input type="text" class="command-input" placeholder="Type a command or search...">
        </div>
        <div class="command-results">
